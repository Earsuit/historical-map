function(getArchitecture ARCHITECTURE)
  if(CMAKE_SYSTEM_PROCESSOR MATCHES "x86_64|AMD64|amd64")
    set(${ARCHITECTURE} "x64" PARENT_SCOPE)
  elseif(CMAKE_SYSTEM_PROCESSOR MATCHES "i[3-6]86")
    set(${ARCHITECTURE} "x86" PARENT_SCOPE)
  elseif(CMAKE_SYSTEM_PROCESSOR MATCHES "aarch64|arm64")
    set(${ARCHITECTURE} "arm64" PARENT_SCOPE)
  elseif(CMAKE_SYSTEM_PROCESSOR MATCHES "arm")
    set(${ARCHITECTURE} "arm" PARENT_SCOPE)
  elseif(CMAKE_SYSTEM_PROCESSOR MATCHES "ppc64le")
    set(${ARCHITECTURE} "ppc64le" PARENT_SCOPE)
  else()
    set(${ARCHITECTURE} "${CMAKE_SYSTEM_PROCESSOR}" PARENT_SCOPE)
  endif()
endfunction()